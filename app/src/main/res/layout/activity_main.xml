<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layout_background_color"
    tools:context=".MainActivity">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/mediumIndent_dp"
            android:layout_marginTop="@dimen/extraMediumIndent_dp"
            android:layout_marginEnd="62dp"
            android:layout_marginBottom="@dimen/mediumIndent_dp"
            android:text="@string/app_name"
            android:textAppearance="@style/title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/largeIndent_dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="@dimen/largeIndent_dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/title">

        <Button
            android:id="@+id/search_button"
            style="@style/main_activity_button_style"
            android:text="@string/search_button"
            app:icon="@drawable/search" />

        <Button
            android:id="@+id/media_library_button"
            style="@style/main_activity_button_style"
            android:text="@string/media_library_button"
            app:icon="@drawable/media_library" />

        <Button
            android:id="@+id/settings_button"
            style="@style/main_activity_button_style"
            android:text="@string/settings_button"
            app:icon="@drawable/settings" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>