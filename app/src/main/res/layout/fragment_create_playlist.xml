<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".createPlaylist.presentation.CreatePlaylistFragment">

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/back_button_fragment_create"
        style="@style/back_button_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/transparent"
        android:src="@drawable/back_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/panelHeader"
        style="@style/panelHeader"
        android:text="@string/newPlaylist"
        app:layout_constraintStart_toEndOf="@+id/back_button_fragment_create"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/strokeRectangleImageView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/indent_24dp"
        android:layout_marginTop="26dp"
        android:background="@drawable/stroke_rectangle"
        app:layout_constraintDimensionRatio="w, 1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/panelHeader" />

    <ImageView
        android:id="@+id/addPhoto"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/indent_24dp"
        android:layout_marginTop="26dp"
        android:src="@drawable/add_photo"
        app:layout_constraintBottom_toBottomOf="@id/strokeRectangleImageView"
        app:layout_constraintDimensionRatio="w, 1:1"
        app:layout_constraintEnd_toEndOf="@id/strokeRectangleImageView"
        app:layout_constraintStart_toStartOf="@id/strokeRectangleImageView"
        app:layout_constraintTop_toTopOf="@id/strokeRectangleImageView" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/albumNameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/indent_16dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/album_edit_text"
        android:hint="Название*"
        android:paddingHorizontal="@dimen/indent_16dp"
        android:paddingVertical="@dimen/indent_19dp"
        android:textSize="@dimen/textSize_16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/strokeRectangleImageView" />

    <androidx.appcompat.widget.AppCompatEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/indent_16dp"
        android:layout_marginTop="@dimen/indent_16dp"
        android:background="@drawable/album_edit_text"
        android:hint="Описание"
        android:paddingHorizontal="@dimen/indent_16dp"
        android:paddingVertical="@dimen/indent_19dp"
        android:textSize="@dimen/textSize_16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/albumNameEditText" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/createButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="17dp"
        android:layout_marginBottom="32dp"
        android:text="Создать"
        android:background="@drawable/create_button_selector"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>