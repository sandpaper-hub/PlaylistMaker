<?xml version="1.0" encoding="utf-8"?>
<resources>
    xmlns:app="http://schemas.android.com/apk/res-auto"

    <style name="main_activity_button_style">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">@dimen/largeTextSize_sp</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:layout_marginBottom">@dimen/largeIndent_dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="iconTint">@color/text_color</item>
        <item name="cornerRadius">@dimen/smallRadius_dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/smallIndent_dp</item>
    </style>

    <style name="settings_activity_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start|center</item>
        <item name="android:paddingStart">@dimen/largeIndent_dp</item>
        <item name="android:paddingTop">19dp</item>
        <item name="android:paddingBottom">18dp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">@dimen/mediumTextSize_sp</item>
    </style>

    <style name="setting_activity_icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center|end</item>
        <item name="android:layout_marginEnd">@dimen/mediumIndent_dp</item>
    </style>

    <style name="title">
        <item name="android:textSize">@dimen/largeTextSize_sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>
