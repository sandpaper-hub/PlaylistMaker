<?xml version="1.0" encoding="utf-8"?>
<resources>
    xmlns:app="http://schemas.android.com/apk/res-auto"

    <style name="main_activity_button_style" parent="Widget.Material3.Button.UnelevatedButton">
        <item name="android:textColor">@color/YP_Black</item>
        <item name="android:textSize">@dimen/textSize_22sp</item>
        <item name="backgroundTint">@color/YP_White</item>
        <item name="android:layout_marginBottom">@dimen/indent_16dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="iconTint">@color/YP_Black</item>
        <item name="cornerRadius">@dimen/radius_16dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/indent_8dp</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="layout_constrainedWidth">true</item>
    </style>

    <style name="settings_activity_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">@dimen/indent_16dp</item>
        <item name="android:paddingTop">@dimen/indent_19dp</item>
        <item name="android:paddingEnd">@dimen/indent_44dp</item>
        <item name="android:paddingBottom">@dimen/indent_18dp</item>
        <item name="android:textSize">@dimen/textSize_16sp</item>
        <item name="fontFamily">@font/ys_text_regular</item>
    </style>

    <style name="panelHeader">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:paddingStart">@dimen/indent_12dp</item>
        <item name="android:paddingTop">@dimen/indent_10dp</item>
        <item name="android:paddingBottom">@dimen/indent_12dp</item>
        <item name="android:textSize">@dimen/textSize_22sp</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="settings_activity_small_icon_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">@dimen/indent_12dp</item>
        <item name="tint">@color/YP_Text_Gray</item>
    </style>

    <style name="back_button_style">
        <item name="android:layout_width">@dimen/button_back_size</item>
        <item name="android:layout_height">@dimen/button_back_size</item>
        <item name="tint">@color/YP_Black</item>
        <item name="contentDescription">@string/back_button</item>
    </style>

    <style name="edit_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">@dimen/indent_16dp</item>
        <item name="android:layout_marginTop">@dimen/indent_8dp</item>
        <item name="android:background">@drawable/rounded_edit_text</item>
        <item name="android:fontFamily">@font/ys_text_regular</item>
        <item name="android:drawablePadding">@dimen/indent_8dp</item>
        <item name="android:drawableTint">@color/YP_Text_Gray</item>
        <item name="android:paddingVertical">@dimen/indent_10dp</item>
        <item name="android:textColor">@color/YP_Black</item>
        <item name="android:textColorHint">@color/YP_Text_Gray</item>
        <item name="android:textSize">@dimen/textSize_16sp</item>
    </style>

    <style name="clear_icon_style" parent="settings_activity_small_icon_style">
        <item name="tint">@color/YP_Text_Gray</item>
    </style>

    <style name="track_text_style_songName">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/indent_8dp</item>
        <item name="android:layout_marginEnd">@dimen/indent_8dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/ys_text_regular</item>
        <item name="android:lines">1</item>
        <item name="android:textSize">@dimen/textSize_16sp</item>
        <item name="layout_constrainedWidth">true</item>
        <item name="layout_constraintHorizontal_bias">0</item>
    </style>

    <style name="track_text_style_artist" parent="track_text_style_songName">
        <item name="android:textColor">@color/YP_Text_Gray</item>
        <item name="android:textSize">@dimen/textSize_11sp</item>
    </style>

    <style name="trackNameArtisStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:lines">1</item>
        <item name="layout_constrainedWidth">true</item>
        <item name="layout_constraintHorizontal_bias">0</item>
    </style>

    <style name="playerButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="backgroundTint">@color/transparent</item>
    </style>

    <style name="invisibleViewStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="trackInfoDescriptionStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_text_regular</item>
        <item name="android:paddingTop">9dp</item>
        <item name="android:paddingBottom">@dimen/indent_8dp</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/YP_Text_Gray</item>
    </style>

    <style name="trackInfoValueStyle" parent="trackInfoDescriptionStyle">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:layout_marginStart">31dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
        <item name="layout_constrainedWidth">true</item>
        <item name="layout_constraintHorizontal_bias">1</item>
    </style>

    <style name="badResultTextStyle">
        <item name="marginHorizontal">@dimen/indent_24dp</item>
        <item name="android:layout_marginTop">@dimen/indent_16dp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:gravity">center_horizontal|top</item>
        <item name="android:textSize">@dimen/textSize_19sp</item>
    </style>

    <style name="materialButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/indent_24dp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">@dimen/textSize_14sp</item>
        <item name="cornerRadius">@dimen/radius_54dp</item>
    </style>
    
    <style name="playlistText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/ys_text_regular</item>
        <item name="android:lines">1</item>
        <item name="android:textSize">@dimen/textSize_12sp</item>
        <item name="layout_constrainedWidth">true</item>
        <item name="layout_constraintHorizontal_bias">0</item>
    </style>

    <style name="edit_text_create">
        <item name="android:layout_marginHorizontal">@dimen/indent_16dp</item>
        <item name="boxBackgroundColor">@color/transparent</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/indent_8dp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/indent_8dp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/indent_8dp</item>
        <item name="boxCornerRadiusTopStart">@dimen/indent_8dp</item>
        <item name="boxStrokeColor">@color/text_input_border_color</item>
        <item name="boxStrokeWidth">@dimen/indent_1dp</item>
        <item name="hintTextColor">@color/Yp_Blue</item>
    </style>
</resources>