<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <size
                android:width="312dp"
                android:height="312dp" />
            <corners android:radius="8dp" />
            <stroke
                android:width="1dp"
                android:color="@color/YP_Text_Gray"
                android:dashWidth="@dimen/indent_24dp"
                android:dashGap="@dimen/indent_24dp" />
        </shape>
    </item>
    <item
        android:width="100dp"
        android:height="100dp"
        android:gravity="center"
        android:drawable="@drawable/add_photo"/>
</layer-list>